{
  // Core Editor Configuration
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlineSuggest.enabled": false,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.parameterHints.enabled": true,
  "editor.wordWrap": "on",
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.bracketPairs": true,

  // TypeScript/JavaScript Configuration
  "typescript.tsdk": "node_modules/typescript/lib",
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsserver.log": "off",
  "typescript.tsserver.maxTsServerMemory": 3072,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEventsOnParentDirectory",
    "fallbackPolling": "dynamicPriorityPolling"
  },
  "typescript.disableAutomaticTypeAcquisition": true,
  "javascript.suggestionActions.enabled": true,
  "typescript.surveys.enabled": false,

  // Language-specific Formatters
  "[javascript][typescript][javascriptreact][typescriptreact][json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss][css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggest.insertMode": "replace",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },

  // Linting Configuration
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    "./src",
    "./tests",
    "./backend-firebase/functions"
  ],

  // File Management
  "npm.packageManager": "npm",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/node_modules": true,
    "**/node_modules/**": true,
    "**/dist": true,
    "**/dist/**": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/coverage": true,
    "**/*.log": true,
    "**/ios/Pods": true,
    "**/android/.gradle": true,
    "**/build": true,
    "**/.env*": true,
    "**/.cache": true
  },
  "files.associations": {
    "*.{ts,tsx}": "typescriptreact",
    "*.{js,jsx}": "javascriptreact",
    "*.scss": "scss",
    "*.module.css": "css"
  },

  // GitHub Copilot Configuration
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },

  // Performance Optimizations
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/.git/**": true,
    "**/.env*": true,
    "**/android/**": true,
    "**/ios/**": true
  },

  // Git Configuration
  "git.enabled": true,
  "git.autofetch": false, // Disable auto-fetch
  "git.decorations.enabled": false, // Disable Git decorations

  // TypeScript Barrel Generator Configuration
  "exportall.config.namedExports": true, // Use named exports
  "exportall.config.includeFoldersToExport": true, // Include folders with index.ts in the barrel
  "exportall.config.exclude": [
    ".test.",
    ".spec.",
    "__tests__",
    "__mocks__",
    "*.config.*",
    "metro.config.*",
    "babel.config.*"
  ], // Exclude files with these strings in the name
  "exportall.config.folderListener": [
    "**/*",
    "!node_modules/**",
    "!dist/**",
    "!build/**",
    "!coverage/**"
  ], // Add folders to listen for changes
  "exportall.config.relExclusion": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/.next/**",
    "**/lib/**",
    "**/types/**",
    "**/generated/**",
    "**/__generated__/**"
  ], // Exclude folders with these strings in the path
  "exportall.config.semis": true, // Use semicolons
  "exportall.config.quote": "'", // Use single quotes
  "exportall.config.message": "// Generated barrel file - do not modify manually", // Add a message to the top of the barrel file
  "exportall.config.exportFileExtension": null
}
