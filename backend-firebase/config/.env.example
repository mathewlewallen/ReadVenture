#-------------------------------------------------------------------------------
# Firebase Configuration (Required)
#-------------------------------------------------------------------------------
FIREBASE_API_KEY=your-api-key-here                      # From Firebase Console
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com       # Format: {project-id}.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id                     # Unique project identifier
FIREBASE_STORAGE_BUCKET=your-project.appspot.com        # Firebase storage bucket
FIREBASE_MESSAGING_SENDER_ID=000000000000              # 12-digit sender ID
FIREBASE_APP_ID=1:000000000000:web:0000000000         # Format: 1:{project}:{platform}:{hash}
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX                    # Analytics measurement ID

#-------------------------------------------------------------------------------
# Security Configuration (Required)
#-------------------------------------------------------------------------------
JWT_SECRET=min-32-chars-secret-key                      # Min 32 chars, high entropy
MONGO_URI=mongodb+srv://[username]:[password]@[cluster].mongodb.net/[database]

#-------------------------------------------------------------------------------
# API Configuration (Required)
#-------------------------------------------------------------------------------
API_URL=http://localhost:3000                           # Dev server endpoint
API_TIMEOUT=30000                                       # Timeout in ms (30s default)

#-------------------------------------------------------------------------------
# Environment Settings (Required)
#-------------------------------------------------------------------------------
APP_ENV=development                                     # [development|staging|production]
DEBUG_MODE=false                                        # Enable detailed logging
LOG_LEVEL=info                                          # [debug|info|warn|error]

#-------------------------------------------------------------------------------
# Performance & Security (Required)
#-------------------------------------------------------------------------------
CACHE_DURATION=3600                                     # Cache TTL in seconds
MAX_UPLOAD_SIZE=5242880                                # Max file size in bytes (5MB)
RATE_LIMIT_MAX=100                                     # Requests per window
RATE_LIMIT_WINDOW=900000                               # Window size in ms (15m)

#-------------------------------------------------------------------------------
# Feature Flags (Optional)
#-------------------------------------------------------------------------------
ENABLE_PUSH_NOTIFICATIONS=false                         # Firebase FCM integration
ENABLE_ANALYTICS=false                                  # Google Analytics

#-------------------------------------------------------------------------------
# External Services (Optional)
#-------------------------------------------------------------------------------
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx        # Error tracking
ANALYTICS_KEY=UA-XXXXXXXXX-X                            # Google Analytics ID

#-------------------------------------------------------------------------------
# Testing Configuration (Development Only)
#-------------------------------------------------------------------------------
TEST_USER_EMAIL=test@example.com                        # E2E testing account
TEST_USER_PASSWORD=TestPass123!                         # Min 8 chars, 1 upper, 1 number, 1 special
MOCK_SERVICES=false                                     # Enable service mocking
