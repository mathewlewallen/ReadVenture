/**
 * TypeScript configuration for Firebase Cloud Functions
 * Optimized for Node.js runtime with strict type checking
 */
{
  "compilerOptions": {
    // Build configuration
    "target": "es2020", // Updated for newer Node.js features
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "incremental": true, // Faster subsequent builds

    // Enhanced type checking
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true, // Additional type safety
    "exactOptionalPropertyTypes": true,

    // Module resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Firebase Functions environment
    "lib": [
      "es2020",
      "dom" // Required for Firebase Admin SDK
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"] // Add test path alias
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "tests/**/*" // Include tests for type checking
  ],
  "exclude": [
    "node_modules",
    "lib",
    "coverage",
    ".webpack",
    "**/*.spec.ts", // Exclude test files from build
    "**/*.test.ts"
  ]
}
