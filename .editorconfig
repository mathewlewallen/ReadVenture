# EditorConfig helps maintain consistent coding styles across various editors and IDEs
# See: https://editorconfig.org
root = true

# Default settings for all files
[*]
end_of_line = lf                     # Unix-style line endings
insert_final_newline = true          # Ensure file ends with empty line
trim_trailing_whitespace = true      # Remove trailing whitespace
charset = utf-8                      # Set UTF-8 character encoding
max_line_length = 100               # Match ESLint max-len rule

# Frontend source files
[*.{js,jsx,ts,tsx,css,scss,json}]
indent_style = space
indent_size = 2

# Backend files
[*.{py,java,php}]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false    # Preserve trailing whitespace for line breaks

# Configuration files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Preserve generated files
[{package-lock.json,yarn.lock}]
indent_size = unset
indent_style = unset
