root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 120

# Frontend source files
[*.{js,jsx,ts,tsx,css,scss,json}]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Configuration files - YAML requires spaces
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts - Unix standard
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Preserve generated files - important for lock files
[{package-lock.json,yarn.lock}]
indent_size = unset
indent_style = unset
