/**
 * Root TypeScript configuration for ReadVenture
 * Extends React Native base config with project-specific settings
 */
{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "references": [
    { "path": "./src" },
    { "path": "./backend" },
    { "path": "./backend-firebase" },
    { "path": "./config" },
    { "path": "./tests" }
  ],
  "compilerOptions": {
    // Build settings
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"], // Removed dom for browser APIs
    "jsx": "react-native",

    // Type checking
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,

    // Module resolution
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,

    // Remove preserveValueImports since we're using verbatimModuleSyntax

    // Development
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    // Optimize TypeScript performance
    "disableSourceOfProjectReferenceRedirect": true,
    "maxNodeModuleJsDepth": 1,
    // Reduce type checking scope
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo"
  },
  "include": [
    "*.ts",
    "*.tsx",
    "*.js",
    "*.jsx",
    "index.ts",
    "src/**/*",
    "tests/**/*",
    "backend/src/**/*",
    "backend-firebase/**/*",
    "config/**/*",
    "__mocks__/**/*",
    "*.config.ts",
    "*.config.js"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/coverage",
    "**/*.config.js"
  ]
}
