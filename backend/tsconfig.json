/**
 * TypeScript configuration for backend API service
 * Extends root configuration while adding backend-specific settings
 */
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Build output configuration
    "outDir": "./dist",
    "rootDir": "./src",

    // Backend-specific compiler options
    "module": "Node16",
    "target": "es2020",
    "sourceMap": true,
    "declaration": true,

    // Type checking
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Module resolution
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,

    // Path aliases for cleaner imports
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
